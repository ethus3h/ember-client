#!/usr/bin/env bash
# shellcheck disable=SC1091
source ember_bash_setup &> /dev/null || { printf '%b' '\033[1;31m' >&2; echo "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd): The required dependency ember-shared could not be found (or ember_bash_setup could not be sourced for some other reason)." >&2; printf '%b' '\033[0m' >&2; exit 1; }
#set -x

trap 'die "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd) at $(emdate)."' ERR

# Build the EITE implementation.

sicmd="./support/build-scripts/build-wrapped"
#[[ -f "./build-wrapped" ]] && sicmd=./"$sicmd"

if [[ "$1" == "-v" ]]; then
    shift
    "$sicmd" "$@"
else
    echo "Building, please wait..."
    "$sicmd" "$@" &> /dev/null
    echo "Done."
fi

cp ./implementation/core-implementations/js/core.js ../web/eite.js
echo >> ./web/eite.js
cat ./implementation/portable/portable.js >> ../web/eite.js
echo >> ./web/eite.js
cat ./implementation/speedups/speedups.js >> ../web/eite.js
