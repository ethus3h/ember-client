#!/usr/bin/env bash
# shellcheck disable=SC1091
source ember_bash_setup &> /dev/null || { printf '%b' '\033[1;31m' >&2; echo "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd): The required dependency ember-shared could not be found (or ember_bash_setup could not be sourced for some other reason)." >&2; printf '%b' '\033[0m' >&2; exit 1; }
#set -x

trap 'die "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd) at $(emdate)."' ERR

# Build the StageL library. Also build StageR while we're at it.

slcmd="./support/build-scripts/build-stagel-inner"
#[[ -f "./stagel-build-internal-stagel-inner" ]] && slcmd=./"$slcmd"
srcmd="./support/build-scripts/build-stager-inner"
#[[ -f "./stagel-build-internal-stager-inner" ]] && srcmd=./"$srcmd"

mkdir ./built/stagel

targets=(js sh)

# FIXME: the "find" commands (I think?) don't return nonzero exit status on failure

targetCount="${#targets[@]}"
for (( i=0; i<targetCount; i++ )); do
    [[ -d "./implementation/core-implementations/${targets[$i]}" ]] || continue

    #StageL

    rm -f ./implementation/core-implementations/"${targets[$i]}"/core."${targets[$i]}"

    echo '// @license magnet:?xt=urn:btih:0b31508aeb0634b347b8270c7bee4d411b5d4109&dn=agpl-3.0.txt AGPL-3.0'$'\n' > ./implementation/core-implementations/"${targets[$i]}"/core."${targets[$i]}"

    find ./implementation/core-implementations/"${targets[$i]}"/ -not -name "core.${targets[$i]}" -name '*.'"${targets[$i]}" -exec "$slcmd" {} "${targets[$i]}" \;

    echo $'\n''// @license-end' >> ./implementation/core-implementations/"${targets[$i]}"/core."${targets[$i]}"

    #StageR

    rm -f ./implementation/portable/portable."${targets[$i]}"

    echo '// @license magnet:?xt=urn:btih:0b31508aeb0634b347b8270c7bee4d411b5d4109&dn=agpl-3.0.txt AGPL-3.0'$'\n' > ./implementation/portable/portable."${targets[$i]}"

    find ./implementation/portable/ -name '*.stagel' -exec "$srcmd" {} "${targets[$i]}" \;

    echo $'\n''// @license-end' >> ./implementation/portable/portable."${targets[$i]}"

    mkdir ./build/stagel-parts/"${targets[$i]}"
    mv ./implementation/core-implementations/"${targets[$i]}"/core."${targets[$i]}" ./build/stagel-parts/"${targets[$i]}"/
    mv ./implementation/portable/"${targets[$i]}"/portable."${targets[$i]}" ./build/stagel-parts/"${targets[$i]}"/
    cp ./implementation/speedups/"${targets[$i]}"/speedups."${targets[$i]}" ./build/stagel-parts/"${targets[$i]}"/
cp ./implementation/core-implementations/js/core.js ./built/web/eite.js
echo >> ./built/web/eite.js
cat ./implementation/portable/portable.js >> ./built/web/eite.js
echo >> ./built/web/eite.js
echo '// @license magnet:?xt=urn:btih:0b31508aeb0634b347b8270c7bee4d411b5d4109&dn=agpl-3.0.txt AGPL-3.0'$'\n' >> ./built/web/eite.js
cat ./implementation/speedups/speedups.js >> ./built/web/eite.js
echo $'\n''// @license-end' >> ./built/web/eite.js
done
