#!/usr/bin/env bash

local currentArgPrefix
while [[ -n "$1" ]]; do
	currentArgPrefix="${1%%=*}"
	case $action in
	create)
    ;;
*)
    die "Unknown action."
    ;;
esac


-prefix="${EPREFIX}"/usr 
			${CBUILD:+--build=${CBUILD}} \
			--host=${CHOST} \
			${CTARGET:+--target=${CTARGET}} \
			--mandir="${EPREFIX}"/usr/share/man \
			--infodir="${EPREFIX}"/usr/share/info \
			--datadir="${EPREFIX}"/usr/share \
			--sysconfdir="${EPREFIX}"/etc \
			--localstatedir="${EPREFIX}"/var/lib
