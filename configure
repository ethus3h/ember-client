#!/usr/bin/env bash

local currentArgPrefix
while [[ -n "$1" ]]; do
    currentArgPrefix="${1%%=*}"
    case $currentArgPrefix in
    --prefix)
        printf '%s' "$prefix" > support/.prefix
        ;;
    --mandir)
        printf '%s' "$prefix" > support/.mandir
        ;;
    --infodir)
        printf '%s' "$prefix" > support/.infodir
        ;;
    --datadir)
        printf '%s' "$prefix" > support/.datadir
        ;;
    --sysconfdir)
        printf '%s' "$prefix" > support/.sysconfdir
        ;;
    --localstatedir)
        printf '%s' "$prefix" > support/.localstatedir
        ;;
    *)
        true
        ;;
    esac
